@model List<Church4Site.Entities.EventData>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Background Site</title>
    <link rel="stylesheet" href="~/css/MainPage.css">
    <script src="~/js/site.js"></script>
</head>
<body>



    <header class="grace-header">
        <div class="header-inner-flex">
            <a href="#" class="main-identity">GRACE<span>CHURCH</span></a>

            <div class="portal-trigger" id="portal-toggle">
                <span class="line-element"></span>
                <span class="line-element"></span>
                <span class="line-element"></span>
            </div>

            <ul class="portal-wrapper">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-area="" asp-controller="Main" asp-action="LogOut">Logout</a></li>
                    <li><a asp-area="" asp-controller="Main" asp-action="SunDays">Sundays</a></li>
                    <li><a asp-area="" asp-controller="Main" asp-action="Calendar">Calendar</a></li>
                    <li><a asp-area="" asp-controller="Main" asp-action="Youth">Youth</a></li>
                    <li><a asp-area="" asp-controller="AdminFile" asp-action="AdminPage">Admin</a></li>
                }
                else
                {
                    <li><a asp-area="" asp-controller="Main" asp-action="SunDays">Sundays</a></li>
                    <li><a asp-area="" asp-controller="Main" asp-action="Calendar">Calendar</a></li>
                    <li><a asp-area="" asp-controller="Main" asp-action="Youth">Youth</a></li>
                    <li><a asp-area="" asp-controller="Main" asp-action="LogIn">Login</a></li>
                    <li><a asp-area="" asp-controller="Main" asp-action="Register">Register</a></li>


                }
                
                <li><a href="#" class="portal-button">Visit Us</a></li>
            </ul>
        </div>
    </header>





    <div class="hero-container">
        <video class="bg-video" autoplay loop muted playsinline poster="fallback-image.jpg">
            <source src="~/css/Videos/ChurchVideo.mkv" type="video/mp4">
            Your browser does not support the video tag.
        </video>

        <div class="overlay"></div>

        <nav class="social-nav">
            <a href="https://instagram.com" target="_blank">Instagram</a>
            <a href="https://facebook.com" target="_blank">Facebook</a>
            <a href="https://youtube.com" target="_blank">YouTube</a>
        </nav>

        <main class="center-content">
            <h1>EXPLORE</h1>
            <p>Experience the world in motion.</p>
        </main>
    </div>



    <div class="warm-section">
        <h2>Upcoming Events</h2>


        <div class="events-grid">
            @foreach (var ev in Model)
            {
                <div class="event-card">

                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">@ev.Name</h2>
                        </div>
                        <div class="card-body">
                            <p class="card-description">
                                @ev.Description
                            </p>
                            <div class="card-info">
                                <span class="card-date">📅 @ev.Date</span>
                                <span class="card-time">⏰ 10:00 AM – 5:00 PM</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>



    <div class="double-border-box">
        <div class="border-content">
            <h3>ELEGANCE</h3>
            <p>Refined Design</p>
        </div>
    </div>


    <div class="warm-image-section">
        <div class="image-mask-container">
            <img src="~/css/Images/black-women-in-church.jpg" alt="Descriptive Alt Text" class="fading-image">
        </div>

        <div class="warm-image-content">
            <h2>Handcrafted Beauty</h2>
            <p>Details that matter, quality that lasts.</p>
        </div>
    </div>




    <div class="full-width-frame gray-bg">
        <div class="center-border-box">
            <div class="inner-text">
                <h2>MODERN DESIGN</h2>
                <p>ESTABLISHED 2025</p>
            </div>
        </div>
    </div>





    <div class="warm-image-left-section">
        <div class="image-mask-left">
            <img src="~/css/Images/youngchurch.jpg" alt="Artistic Scene" class="fading-image">
        </div>

        <div class="warm-content">
            <h2>REVERSE VIEW</h2>
            <p>A new perspective on design.</p>
        </div>
    </div>




    <section class="church-lower-section">
        <div class="church-frame">
            <div class="visit-card">
                <div class="card-inner">
                    <span class="sub-tag">Welcome Home</span>
                    <h2>Join Us This Sunday</h2>
                    <div class="service-times">
                        <p>9:00 AM &bull; 11:00 AM</p>
                        <p>123 Grace Lane, Your City</p>
                    </div>
                    <a asp-controller="Main" asp-action="SunDays" class="cta-button">Plan Your Visit</a>
                </div>
            </div>
        </div>

        <nav class="church-socials">
            <a href="#">Instagram</a>
            <a href="#">Facebook</a>
            <a href="#">YouTube</a>
        </nav>
    </section>





</body>
</html>
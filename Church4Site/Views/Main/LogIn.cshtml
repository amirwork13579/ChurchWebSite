@model Church4Site.Models.UserDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Login</title>
    <link rel="stylesheet" href="~/css/LogIn.css">
</head>
<body>

    <header class="navbar">
        <div class="logo">
            <a href="#">BrandName</a>
        </div>
        <nav class="nav-links-container">
            <ul class="nav-links">


                
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="MainPage">MainPage</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="Test">Test</a>
                </li>
                
            </ul>
            <a class="nav-link text-dark cta-button" asp-area="" asp-controller="Main" asp-action="Register">Sign-Up</a>
        </nav>
        <div class="menu-toggle" id="menuToggle">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
        </div>
    </header>

    <div class="login-container">
        <div class="login-card">
            <h2>Welcome Back</h2>
            <p>Please enter your credentials to access your account.</p>

            <form asp-action="LogIn" class="login-form">
                <div class="form-group">
                    <label for="username">Username or Email</label>
                    <input asp-for="Username" type="text" id="username" name="username" required>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input asp-for="Password" type="password" id="password" name="password" required>
                </div>

                <div class="form-options">
                    <label>
                        <input type="checkbox" name="remember"> Remember Me
                    </label>
                    <a href="#">Forgot Password?</a>
                </div>

                <button type="submit" class="login-button">Log In</button>
            </form>

            <div class="register-link">
                Don't have an account? <a href="#">Sign Up</a>
            </div>
        </div>
    </div>

</body>
</html>